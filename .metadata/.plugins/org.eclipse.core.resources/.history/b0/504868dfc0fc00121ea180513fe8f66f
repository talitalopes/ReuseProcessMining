<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:rdl="http://www.prisma.cos.ufrj.br/rdl" targetNamespace="http://www.prisma.cos.ufrj.br/rdl" xmlns:tns="http://www.jboss.org/drools">
	<xsd:element name="process" type="rdl:Process"/>
	<xsd:complexType name="Process">
		<xsd:sequence>
			<xsd:element name="properties" type="rdl:Property" minOccurs="1" maxOccurs="unbounded" />
			<xsd:element name="startEvent" type="rdl:Object" minOccurs="1" maxOccurs="1"/>
			<xsd:element name="tasks" type="rdl:Task" minOccurs="1" maxOccurs="unbounded"/>
			<xsd:element name="sequenceFlow" type="rdl:SequenceFlow" maxOccurs="unbounded"/>
			<xsd:element name="endEvent" type="rdl:Object" minOccurs="1" maxOccurs="1"/>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="Object" abstract="true">
		<xs:attribute name="id" type="xsd:string"/>
		<xs:attribute name="name" type="xsd:string"/>
	</xsd:complexType>
	<xsd:complexType name="Property">
		<xs:attribute name="id" type="xsd:string"/>
		<xs:attribute name="itemSubjectRef" type="xsd:string"/>
	</xsd:complexType>
	<xsd:complexType name="Task">
		<xs:extension base="doc:Object">
			<xsd:element name="tns:taskName" type="xsd:string"/>
		</xs:extension>
		<xsd:element name="ioSpecification" type="rdl:IOSpecification" minOccurs="1" maxOccurs="1" />
	</xsd:complexType>
	<xsd:complexType name="IOSpecification">
		<xsd:sequence>
			<xsd:element name="dataInput" type="rdl:DataInput" minOccurs="1" maxOccurs="unbounded" />
			<xsd:element name="inputSet" type="rdl:InputSet" minOccurs="1" maxOccurs="1" />
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="InputSet">
		<xsd:sequence>
			<xsd:element name="dataInputRefs" type="xs:string" minOccurs="1" maxOccurs="unbounded" />
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="SequenceFlow">
		<xs:attribute name="id" type="xsd:string"/>
		<xs:attribute name="sourceRef" type="xsd:string"/>
		<xs:attribute name="targetRef" type="xsd:string"/>
	</xsd:complexType>
</xsd:schema>
